\begin{enumerate}
\item 
\begin{Verbatim}
>>> for n in range(7):
        print(n,':',end=' ')
        for m in range(n+1):
            print(g(n,m),end=' ')
        print()

0 : 1 
1 : 0 1 
2 : 0 1 1 
3 : 0 1 2 2 
4 : 0 2 4 5 5 
5 : 0 5 10 14 16 16 
6 : 0 16 32 46 56 61 61 
\end{Verbatim}
\end{enumerate}
\end{minipage}
