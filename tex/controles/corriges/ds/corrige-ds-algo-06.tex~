\section{PortÃ©e des variables}
%-----------------------------------------------------------------------------
%\lstinputlisting[basicstyle=\footnotesize]{ds-algo-06-portees.py}

\begin{minipage}[t]{7cm}\footnotesize
\begin{verbatim}
>>> x = 2
>>> print(x)
2

>>> y = f(x)
>>> print(x)
f 6
2

>>> print(x)
f 6
g 18
2

>>> t = h(x)
>>> print(x)
f 6
f 18
g 54
h 162
2
\end{verbatim}
\end{minipage}
\hfill
\begin{minipage}[t]{7cm}\footnotesize
\begin{verbatim}
>>> x = 2
>>> print(x)
2

>>> x = f(x)
>>> print(x)
f 6
6

>>> x = g(x)
>>> print(x)
f 18
g 54
54

>>> x = h(x)
>>> print(x)
f 162
f 486
g 1458
h 4374
4374
\end{verbatim}
\end{minipage}

