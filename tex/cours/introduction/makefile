LATEX = pdflatex
PDFDIR = ../../../pdf/cours

export TEXINPUTS=.:../../macros//:

ALLPDF = introductionSlide.pdf introductionPaper.pdf

#------------------------------------------------------------------------------------------
all: $(ALLPDF)

#------------------------------------------------------------------------------------------
%.pdf: %.tex
	$(LATEX) $<
	$(LATEX) $<
	cp $@ $(PDFDIR)

#------------------------------------------------------------------------------------------
clean:
	rm -f *.aux *.log *.mtc* *.nav *.out *.snm *.thm *.toc
	rm -f $(ALLPDF)

