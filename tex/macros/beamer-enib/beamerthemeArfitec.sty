\def\footpagecourante{
	\centerline{\makebox[\linewidth]{$\rule[-0.75ex]{0cm}{3ex}$
		\color{noir}
		\textbf{\insertshorttitle{}}
		\hspace*{1em}
		{\insertshortauthor{}}
		\hspace*{1em}
		{\insertshortdate{}}
		\hfill
		{\footnotesize\textbf{\insertframenumber{}}}/\inserttotalframenumber{}}
	}
}
\setbeamertemplate{footline}{\footpagecourante}

%-------------------------------------------------------------------------
\def\pagetitre#1{
	\setbeamertemplate{footline}[default]
	\setbeamertemplate{background canvas}{\includegraphics[keepaspectratio,width=\paperwidth]{fond-page-titre.jpg}}
	\setbeamertemplate{title page}{
		\begin{center}\color{white}
		\mbox{}{\insertshortdate}\mbox{}\\[2mm]
		$\blacktriangle$\\[2mm]
		{\textbf{\inserttitle}}\\[5mm]
		%{{\insertsubtitle}}\\[5mm]
		{{\insertauthor}}
		\end{center}
	}
	\frame{\titlepage}\note{{#1}}
	\setbeamertemplate{background canvas}{\includegraphics[keepaspectratio,width=\paperwidth]{fond-page-courante.jpg}}
	\setbeamertemplate{footline}{\footpagecourante}
}

\def\pagefin#1#2{
	\setbeamertemplate{footline}[default]
	\setbeamertemplate{background canvas}{\includegraphics[keepaspectratio,width=\paperwidth]{fond-page-titre.jpg}}
	\frame{#1}\note{{#2}}
	\setbeamertemplate{background canvas}{\includegraphics[keepaspectratio,width=\paperwidth]{fond-page-courante.jpg}}
	\setbeamertemplate{footline}{\footpagecourante}
}

